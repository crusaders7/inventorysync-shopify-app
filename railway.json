{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "command": "cd /backend && pip install -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors 'self' https://admin.shopify.com https://*.myshopify.com https://inventorysync.prestigecorp.au"
          }
        ]
      }
    ]
  },
  "rootDirectory": "/backend",
  "start": {
    "command": "gunicorn app.main:app -w 4 -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT"
  }
}
