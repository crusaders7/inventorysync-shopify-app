{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "command": "cd /backend && pip install -r requirements.txt"
  },
  "deploy": {
    "metalEdge": {
      "config": "edge.config.json"
    },
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src * 'unsafe-inline' 'unsafe-eval'; frame-ancestors * https://*.myshopify.com https://admin.shopify.com https://*.shopify.com;"
          },
          {
            "key": "X-Frame-Options",
            "value": ""
          },
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ]
  },
  "rootDirectory": "/backend",
  "start": {
    "command": "gunicorn app.main:app -w 4 -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT"
  }
}
