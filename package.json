{
  "name": "inventorysync-shopify-app",
  "version": "1.0.0",
  "description": "Highly customizable inventory management app for Shopify",
  "main": "index.js",
  "scripts": {
    "dev": "shopify app dev",
    "build": "shopify app build",
    "deploy": "shopify app deploy",
    "generate": "shopify app generate",
    "info": "shopify app info",
    "shopify": "shopify",
    "backend:dev": "cd backend && . ../venv/bin/activate && python3 -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload",
    "frontend:dev": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "tunnel": "shopify app tunnel"
  },
  "keywords": ["shopify", "inventory", "management", "app"],
  "author": "InventorySync Team",
  "license": "ISC",
  "devDependencies": {
    "@shopify/cli": "^3.82.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
